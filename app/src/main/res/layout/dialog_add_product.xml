<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin sản phẩm"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edt_prod_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên sản phẩm"/>

        <EditText
            android:id="@+id/edt_prod_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá tiền (VNĐ)"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng tồn kho theo Size:"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/edt_stock_s"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="S"
                android:inputType="number"
                android:gravity="center"/>

            <EditText
                android:id="@+id/edt_stock_m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="M"
                android:inputType="number"
                android:gravity="center"/>

            <EditText
                android:id="@+id/edt_stock_l"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="L"
                android:inputType="number"
                android:gravity="center"/>

            <EditText
                android:id="@+id/edt_stock_xl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="XL"
                android:inputType="number"
                android:gravity="center"/>
        </LinearLayout>

        <EditText
            android:id="@+id/edt_prod_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Link hình ảnh (URL)"/>

        <EditText
            android:id="@+id/edt_prod_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả chi tiết"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh mục:"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:id="@+id/spn_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"/>

    </LinearLayout>
</ScrollView>